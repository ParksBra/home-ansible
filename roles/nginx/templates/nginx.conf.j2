user {{ nginx_user }} {{ nginx_group }};

worker_processes {{ nginx_worker_processes }};

events {
    worker_connections {{ nginx_worker_connections }};
}

http {
    include mime.types;
    default_type application/octet-stream;
    sendfile on;
    keepalive_timeout 65;
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                        '$status $body_bytes_sent "$http_referer" '
                        '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;
}

stream {
    upstream external_https {
        server {{ nginx_upstream_service }}:{{ ingress_nginx_service_https_node_port }} max_fails=3 fail_timeout=10s;
    }

    log_format basic '$remote_addr [$time_local] '
                    '$protocol $status $bytes_sent $bytes_received '
                    '$session_time "$upstream_addr" '
                    '"$upstream_bytes_sent" "$upstream_bytes_received" "$upstream_connect_time"';

    access_log /var/log/nginx/external_https_access.log basic;
    error_log  /var/log/nginx/external_https_error.log;

    server {
        listen 443;
        proxy_pass external_https;
        proxy_next_upstream on;
    }
}

stream {
    upstream internal_http {
        server {{ nginx_upstream_service }}:{{ ingress_nginx_service_http_node_port }} max_fails=3 fail_timeout=10s;
    }

    log_format basic '$remote_addr [$time_local] '
                    '$protocol $status $bytes_sent $bytes_received '
                    '$session_time "$upstream_addr" '
                    '"$upstream_bytes_sent" "$upstream_bytes_received" "$upstream_connect_time"';

    access_log /var/log/nginx/internal_http_access.log basic;
    error_log  /var/log/nginx/internal_http_error.log;

    server {
        {% for cidr in nginx_internal_network_allowed_cidrs %}allow {{ cidr }};
        {% endfor %}
        deny all;
        listen 80;
        proxy_pass internal_http;
        proxy_next_upstream on;
    }
}
